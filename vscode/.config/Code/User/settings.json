{
  "editor.suggestSelection": "first",
  "js/ts.implicitProjectConfig.experimentalDecorators": true,
  "explorer.decorations.colors": false,
  "git.enableSmartCommit": true,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.colorTheme": "poimandres",
  "editor.renderWhitespace": "all",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.fontLigatures": true,
  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "node"
  },
  "workbench.iconTheme": "material-icon-theme",
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "terminal.integrated.profiles.windows": {
    "Git Bash": { "path": "C:\\Program Files\\Git\\bin\\bash.exe" }
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "prettier.arrowParens": "always",
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "html.completion.attributeDefaultValue": "singlequotes",
  "workbench.startupEditor": "none",
  "editor.fontFamily": "Cascadia Code, Fira Code, Consolas, 'Courier New', monospace",
  "prettier.bracketSameLine": true,
  "prettier.trailingComma": "none",
  "files.eol": "\n",
  "tailwindCSS.emmetCompletions": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "css.validate": false,
  "editor.inlineSuggest.enabled": true,
  "editor.wordWrap": "wordWrapColumn",
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true,
    "typescript": true,
    "rust": true,
    "svelte": true
  },
  "explorer.confirmDelete": false,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "astro",
    "svelte"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "workbench.activityBar.visible": false,
  "explorer.compactFolders": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "editor.scrollbar.horizontal": "hidden",
  "editor.minimap.enabled": false,
  "workbench.editor.showTabs": false,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 1,
  "window.menuBarVisibility": "hidden",
  "editor.cursorBlinking": "solid",
  "workbench.sideBar.location": "right",
  "svelte.enable-ts-plugin": true,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "editor.lineNumbers": "relative",
  "git.autofetch": true,
  "errorLens.excludeBySource": ["eslint(jsx-a11y/alt-text)"],
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "git.openRepositoryInParentFolders": "never",
  "javascript.preferences.renameMatchingJsxTags": false,
  "typescript.preferences.renameMatchingJsxTags": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.*.ts"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "files.associations": {
    "*.mdx": "markdown"
  },
  "rust-analyzer.check.command": "clippy",
  // VIM settings
  "vim.leader": "<Space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    // switch b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },

    // nice to have
    { "before": ["leader", "w"], "commands": ["workbench.action.files.save"] },
    { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    }
  ],
  "vim.visualModeKeyBindings": [
    // toggle comment
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
  ],
  "breadcrumbs.enabled": false,
  "diffEditor.renderSideBySide": false,
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "workbench.editor.enablePreview": false
}
